components:
    vivarium_public_health:
        population:
            - BasePopulation()
            - Mortality()
            - FertilityCrudeBirthRate()
        disease.models:
            - SIS('diarrheal_diseases')
            - SIS('lower_respiratory_infections')
            - SIR_fixed_duration('measles', '10')  # days
            - SIS('meningitis')
            - NeonatalSWC_without_incidence('neonatal_sepsis_and_other_neonatal_infections')
            - NeonatalSWC_without_incidence('neonatal_encephalopathy_due_to_birth_asphyxia_and_trauma')
            - NeonatalSWC_without_incidence('hemolytic_disease_and_other_neonatal_jaundice')
        risks:
            - Risk("risk_factor.vitamin_a_deficiency")
            - RiskEffect("risk_factor.vitamin_a_deficiency", "cause.measles.incidence_rate")
            - RiskEffect("risk_factor.vitamin_a_deficiency", "cause.diarrheal_diseases.incidence_rate")
            - RiskEffect("risk_factor.vitamin_a_deficiency", "cause.lower_respiratory_infections.incidence_rate")
        metrics:
            - MortalityObserver()
            - DisabilityObserver()

#    vivarium_gates_bep.components:

configuration:
    input_data:
        location: {{ location_proper }}
        input_draw_number: 0
        artifact_path: /share/costeffectiveness/artifacts/vivarium_gates_bep/{{ location_sanitized }}.hdf
    interpolation:
        order: 0
        extrapolate: False
    randomness:
        map_size: 1_000_000
        key_columns: ['entrance_time']
        random_seed: 0
    time:
        start:
            year: 2005
            month: 7
            day: 2
        end:
            year: 2010
            month: 7
            day: 2
        step_size: 1 # Days
    population:
        population_size: 100
        age_start: 0
        age_end: 100

    metrics:
        disability:
            by_age: False
            by_sex: False
            by_year: False
        mortality:
            by_age: False
            by_sex: False
            by_year: False
