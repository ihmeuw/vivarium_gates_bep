components:
    vivarium_public_health:
        population:
            - Mortality()
        disease.models:
            - SIS('diarrheal_diseases')
            - SIR_fixed_duration('measles', '10')
            - SIS('lower_respiratory_infections')
            - SIS('meningitis')
            - NeonatalSWC_without_incidence('neonatal_disorders')
        metrics:
            - MortalityObserver()
            - DisabilityObserver()
    vivarium_gates_bep.components:
        - NewbornPopulation()
        - DiseaseObserver('diarrheal_diseases')
        - DiseaseObserver('measles')
        - DiseaseObserver('lower_respiratory_infections')
        - DiseaseObserver('meningitis')
        - NeonatalDisordersObserver()

configuration:
    input_data:
        location: {{ location_proper }}
        input_draw_number: 0
        artifact_path: /home/collijk/{{ location_sanitized }}.hdf
    interpolation:
        order: 0
        extrapolate: True
    randomness:
        map_size: 1_000_000
        key_columns: ['index']
        random_seed: 0
    time:
        start:
            year: 2020
            month: 7
            day: 2
        end:
            year: 2022
            month: 7
            day: 2
        step_size: 1 # Days
    population:
        population_size: 10_000
        age_start: 0
        age_end: 2
    metrics:
        mortality:
            by_age: True
            by_sex: True
            by_year: True
        disability:
            by_age: True
            by_sex: True
            by_year: True
        diarrheal_diseases_observer:
            by_age: True
            by_sex: True
            by_year: True
        measles_observer:
            by_age: True
            by_sex: True
            by_year: True
        lower_respiratory_infections_observer:
            by_age: True
            by_sex: True
            by_year: True
        neonatal_disorders_observer:
            by_age: True
            by_sex: True
            by_year: True
